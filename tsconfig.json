{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "paths": {
      "*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", ".vscode-test"],
  "include": ["src/**/*", "src/types/prompt.d.ts"]
} 